/* pages/record-detail/record-detail.wxss */
.record-title{
  position: fixed;
  left: 0;
  top: 0;
  background: #f5f5f5;
}
.record-top{
  width: 750rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 34rpx;
  background: #cda273;
  position: relative;
}
.record-top-txt{
  width: 360rpx;
  margin: 0 auto;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.record-top-jieshu{
  position: absolute;
  right: 20rpx;
  top: 0rpx;
  font-size: 26rpx;
  color: #15BC84;
}
.scroll-view{
  width: 100%;
  height: 140rpx;
  white-space: nowrap;
  text-align: center;
}
.scroll-view view{
  display: inline-block;
  height: 140rpx;
  min-width: 25%;
  line-height: 140rpx;
  font-size: 32rpx; 
}
.scroll-view view.cur{
  color: #15BC84;
}
.record-content{
  margin-top: 120rpx;
  border-radius: 10rpx;
}
.record-list{
  width:630rpx;
  height:133rpx;
  line-height: 133rpx;
  padding: 18rpx 30rpx;
  margin: 0 auto 40rpx;
  display: flex;
  background: #fff;
}
.record-txt{
  width:191rpx;
  height:134rpx;
  line-height: 134rpx;
  font-size: 30rpx;
  color: #ccc;
  text-align: center;
  background: #f5f5f5;
}
.record-img{
  width:191rpx;
  height:134rpx;
}
.record-img image{
  width: 100%;
  height: 100%;
}
.record-date{
  font-size: 28rpx;
  margin: 0 125rpx 0 40rpx;
}
.record-type{
  font-size: 30rpx;
}
.record-type-yes{
  color: #989898;
}
.record-type-no{
  color: #EA2100;
}
.record-add{
  width:136rpx;
  height:136rpx;
  line-height: 136rpx;
  text-align: center;
  font-size: 34rpx;
  color: #fff;
  background: #15bc84;
  position: fixed;
  right: 30rpx;
  bottom: 50rpx; 
  border-radius: 50%;
}
.no-img{
  width:236rpx;
  height:220rpx;
  margin: 400rpx auto 40rpx;
}
.no-img image{
  width: 100%;
  height: 100%;
}
.no-txt{
  width: 444rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 32rpx; 
  color: #ccc;
}