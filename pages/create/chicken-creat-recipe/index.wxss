/* pages/plant-creat-plot/index.wxss */
.chicken-creat-recipe{
  padding-bottom: 200rpx;
}
.content{
  padding: 70rpx 0;
}
.type{
  display: flex;
  font-size: 28rpx;
  width: 630rpx;
  margin: 0 auto 60rpx;
  flex-wrap: wrap;
}
.type text{
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  margin-right: 40rpx;
}
.type-radio{
  width: 480rpx;
}
.list{
  padding: 0 20rpx;
  display: flex;
  font-size: 30rpx;
  margin-bottom: 40rpx;
  position: relative;
}
.list text{
  display: inline-block;
  width: 150rpx;
  height:61rpx;
  line-height: 61rpx;
  text-align: right;
}
.list input{
  width:523rpx;
  height:61rpx;
  padding-left: 20rpx;
  background: #fff;
}
.unit{
  position: absolute;
  right: 60rpx;
  top: 15rpx;
}
.btn{
  position: fixed;
  left: 60rpx;
  bottom: 30rpx;
  width:632rpx;
  height:83rpx;
  line-height: 83rpx;
  text-align: center;
  font-size: 30rpx; 
  background: #15ba82;
  color: #fff;
  border-radius: 50rpx;
}
.one,.two{
  display: flex;
   height:61rpx;
  line-height: 61rpx;
}
.one{
  margin-right: 10rpx;
}
.one text{
  display: block;
  width: 130rpx;
  text-align: right;
}
.one input,.two input{
  width:177rpx;
  height:61rpx;
}
.close{
  position: absolute;
  right:5rpx;
  top: -20rpx;
  width:40rpx;
  height:40rpx;
  text-align: center;
  line-height: 30rpx;
  background: #ff3b30;
  font-size: 50rpx;
  color: #fff;
  border-radius: 50%;
}
.add{
  text-align: center;
  font-size: 28rpx;
  color: #15BA82;
}