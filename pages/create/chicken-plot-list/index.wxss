/* pages/plant-plot-list/index.wxss */
.title{
  height: 90rpx;
  line-height: 90rpx;
  background: #cda273;
  text-align: center;
  font-size: 34rpx;
  position: relative;
  font-weight: bold;
  display: flex;
}
.title text{
  flex: 1;
}
.title text.cur{
  color: #fff;
}
.content{
  padding: 70rpx 30rpx;
}
.list{
  width:630rpx;
  min-height:232rpx;
  padding: 0 30rpx;
  background: #fff;
  margin-bottom: 30rpx;
  display: flex;
  position: relative;
}
.num{
  font-size: 24rpx;
  color: #E5C4AC;
  margin-top: 15rpx;
}
.img{
  width:192rpx;
  height:192rpx;
  margin-right: 40rpx;
  margin-top: 20rpx;
}
.img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #000;
}
.code{
  margin: 20rpx auto 15rpx;
  font-size: 36rpx;
  font-weight: bold;
}
.batch{
  width: 500rpx;
  font-size: 24rpx;
  color: #E5C4AC;
  margin-bottom: 5rpx;
}
.siliao .code{
   margin: 60rpx auto 15rpx;
}
.area text{
  padding: 2rpx 15rpx;
  background: #f2e1d5;
  font-size: 24rpx;
  color: #B3824F;
  border-radius: 20rpx;
  margin-right: 20rpx;
}
.edit,.del{
  width: 34rpx;
  height: 33rpx;
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
}
.edit{
  right: 100rpx;
}
.edit image,.del image{
  width: 100%;
  height: 100%;
}
.btn{
  position: fixed;
  left: 60rpx;
  bottom: 30rpx;
  width:632rpx;
  height:83rpx;
  line-height: 83rpx;
  text-align: center;
  font-size: 30rpx; 
  background: #15ba82;
  color: #fff;
  border-radius: 50rpx;
}
.no-img{
  width:230rpx;
  height:224rpx;
  margin: 330rpx auto 34rpx;
}
.no-img image{
  width: 100%;
  height: 100%;
}
.no-txt{
  font-size: 32rpx;
  text-align: center;
}
