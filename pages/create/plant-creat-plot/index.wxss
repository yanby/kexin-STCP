/* pages/plant-creat-plot/index.wxss */
.content{
  padding: 70rpx 0;
}
.type{
  display: flex;
  font-size: 28rpx;
  width: 630rpx;
  margin: 0 auto 60rpx;
}
.type text{
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  margin-right: 40rpx;
}
.list{
  padding: 0 30rpx;
  display: flex;
  font-size: 30rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.list text{
  height:61rpx;
  line-height: 61rpx;
}
.list input{
  width:523rpx;
  height:61rpx;
  padding-left: 20rpx;
  background: #fff;
}
.unit{
  position: absolute;
  right: 60rpx;
  top: 15rpx;
}
.btn{
  position: fixed;
  left: 60rpx;
  bottom: 30rpx;
  width:632rpx;
  height:83rpx;
  line-height: 83rpx;
  text-align: center;
  font-size: 30rpx; 
  background: #15ba82;
  color: #fff;
  border-radius: 50rpx;
}


.list1{
  margin-top: 40rpx;
}
.img{
  display: flex;
  font-size: 30rpx;
  margin-bottom: 60rpx;
}
.img text{
  height:61rpx;
  line-height: 61rpx;
}
.img-item{
  width: 510rpx;
}
.img-txt{
  height:61rpx;
  line-height: 61rpx;
  margin-bottom: 30rpx;
}
.img-tu{
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 15rpx;
}
.img-tu image{
  width:205rpx;
  height:205rpx;
  margin: 0 50rpx 20rpx 0;
}
.img-tu-item{
  width:205rpx;
  height:205rpx;
  background: #fff;
}
.img-tu-add{
  font-size: 100rpx;
  text-align: center;
  color: #CCCCCC;
}
.img-tu-upload{
  font-size: 26rpx;
  color: #CCCCCC;
  text-align: center;
}
.img-tu-wrap{
  position: relative;
}
.img-close{
  position: absolute;
  right: 40rpx;
  top: -20rpx;
  width:40rpx;
  height:40rpx;
  text-align: center;
  line-height: 35rpx;
  background: #ff3b30;
  font-size: 50rpx;
  color: #fff;
  border-radius: 50%;
}