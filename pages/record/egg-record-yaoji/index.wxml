  <view class="txt">
    <text>药剂名称：</text>
    <input class="txt-input2" placeholder="请输入您使用的药剂名称" type="text" value="{{name}}" data-k="name" bindinput="input"></input>
  </view>
   <view class="txt">
    <text class="txt-three">用药量：</text>
    <input class="txt-input2" placeholder="请输入用药量，并注明单位" type="text" value="{{dosage}}" data-k="dosage" bindinput="input"></input>
  </view>
  <view class="voice">
    <text>说点什么：</text>
    <view class="voice-textarea">
      <textarea bindblur="bindTextAreaBlur" auto-height value='{{content}}'/>
       <button class="yuyinBtn {{recordState == true ? 'yuyinBtnBg':''}}" bindtouchstart="touchStart" bindtouchend="touchEnd">
        <text wx:if="{{recordState == false}}">按住 说话</text>
        <text class="songkai" wx:else>松开 结束</text>
      </button>
    </view>
  </view>
  <view class="btn">
